<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="105dp"
    android:layout_height="wrap_content"
    android:divider="@drawable/small_divider"
    android:orientation="vertical"
    android:showDividers="middle"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/book_image_view"
            android:layout_width="105dp"
            android:layout_height="148dp"
            android:layout_gravity="center"
            android:background="@drawable/border_book"
            android:contentDescription="@string/image_of_book_on_hands"
            android:scaleType="fitCenter"
            android:src="@drawable/little_prince" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/author_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:maxLines="2"
        android:text="@string/author_name"
        android:textColor="@color/text_secondary"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/title_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pt_serif_bold"
        android:maxLines="2"
        android:text="@string/book_title"
        android:textColor="@color/headers_primary"
        android:textSize="12sp" />

</LinearLayout>