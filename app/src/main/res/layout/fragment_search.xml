<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/upper_background"
    android:gravity="top">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        >
        <TextView
            android:id="@+id/date_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/pt_serif_bold"
            android:layout_gravity="center"
            android:text="@string/date_day"
            android:textSize="38sp"
            android:textColor="@color/date_day"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            >
            <TextView
                android:id="@+id/day_of_the_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pt_serif_bold"
                android:text="@string/day_of_the_week"
                android:textColor="@color/date_secondary"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
            <TextView
                android:id="@+id/month_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/pt_serif_bold"
                android:text="@string/month_year"
                android:textColor="@color/date_secondary"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="end"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                >
                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:background="@drawable/border_profile"
                    android:contentDescription="@string/profile_image" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:textColor="@color/headers_primary"
            android:textSize="30sp"
            android:fontFamily="@font/pt_serif_bold"
            android:gravity="bottom"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:showDividers="middle"
        android:divider="@drawable/empty_divider"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_edit_text"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:hint="@string/book_name"
            android:textColorHint="@color/search_color_header"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck"
            android:autofillHints="book name"
            android:inputType="text" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_edit_text"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:hint="@string/author_name"
            android:textColorHint="@color/search_color_header"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck"
            android:autofillHints="name"
            android:inputType="textPersonName" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_edit_text"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:hint="@string/theme"
            android:textColorHint="@color/search_color_header"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck"
            android:importantForAutofill="no"
            android:inputType="text" />
        <android.widget.Button
            android:id="@+id/find_book"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto"
            android:text="@string/find_book"
            android:textSize="20sp"
            android:background="@drawable/ic_search_button"
            android:paddingHorizontal="10dp"
            />
    </LinearLayout>
</LinearLayout>