<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/upper_background"
    android:gravity="top"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pt_serif_bold"
            android:gravity="bottom"
            android:text="@string/authorization"
            android:textColor="@color/headers_primary"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:showDividers="middle"
        android:divider="@drawable/empty_divider"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_edit_text"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:hint="@string/login_email"
            android:textColorHint="@color/search_color_header"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_edit_text"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:hint="@string/password"
            android:textColorHint="@color/search_color_header"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck"
            android:autofillHints="password"
            android:inputType="textPassword" />
        <android.widget.Button
            android:id="@+id/auth_ok"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto"
            android:text="@string/apply"
            android:textSize="20sp"
            android:background="@drawable/ic_search_button"
            android:paddingHorizontal="10dp"
            />
    </LinearLayout>


</LinearLayout>