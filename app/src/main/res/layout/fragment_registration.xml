<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/upper_background"
    android:gravity="top"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        >

        <TextView
            android:id="@+id/date_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/pt_serif_bold"
            android:layout_gravity="center"
            android:text="@string/date_day"
            android:textSize="38sp"
            android:textColor="@color/date_day"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            >

            <TextView
                android:id="@+id/day_of_the_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pt_serif_bold"
                android:text="@string/day_of_the_week"
                android:textColor="@color/date_secondary"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/month_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/pt_serif_bold"
                android:text="@string/month_year"
                android:textColor="@color/date_secondary"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="end"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                >
                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:background="@drawable/border_profile"
                    android:contentDescription="@string/profile_image" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/registration"
            android:textColor="@color/headers_primary"
            android:textSize="30sp"
            android:fontFamily="@font/pt_serif_bold"
            android:gravity="bottom"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:showDividers="middle"
            android:divider="@drawable/empty_divider"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clarification"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:layout_gravity="top"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/passport_details"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="@string/gender"
                    android:textColor="@color/headers_primary"
                    android:textSize="20sp"
                    android:layout_gravity="center"

                    />

                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:spinnerMode="dropdown"
                    android:textSize="20sp"
                    android:background="@drawable/ic_dropdown"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/surname_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_search_edit_text"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:hint="@string/surname"
                android:textColorHint="@color/search_color_header"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck"
                android:textColor="@color/black"
                android:autofillHints="name"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_search_edit_text"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:hint="@string/name"
                android:textColorHint="@color/search_color_header"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck"
                android:textColor="@color/black"
                android:autofillHints="name"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/patronymic_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_search_edit_text"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:hint="@string/patronymic"
                android:textColorHint="@color/search_color_header"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck"
                android:autofillHints="name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/phone_number_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_search_edit_text"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:hint="@string/phone_number"
                android:textColorHint="@color/search_color_header"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck"
                android:inputType="phone"
                android:textColor="@color/black"
                android:autofillHints="phone" />
            <android.widget.Button
                android:id="@+id/date_birth_button"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/ic_search_edit_text"
                android:fontFamily="@font/roboto"
                android:text="@string/date_of_birth"
                android:textColor="@color/search_color_header"
                android:textAllCaps="false"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/registration_address_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_search_edit_text"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:hint="@string/reg_address"
                android:textColorHint="@color/search_color_header"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck"
                android:inputType="textPostalAddress"
                android:textColor="@color/black"
                android:autofillHints="postalAddress" />

            <EditText
                android:id="@+id/email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_search_edit_text"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:hint="@string/email"
                android:textColorHint="@color/search_color_header"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:autofillHints="emailAddress" />
            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_search_edit_text"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:hint="@string/password"
                android:textColorHint="@color/search_color_header"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:autofillHints="password" />

            <android.widget.Button
                android:id="@+id/approve"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:background="@drawable/ic_search_button"
                android:fontFamily="@font/roboto"
                android:paddingHorizontal="10dp"
                android:text="@string/apply"
                android:textColor="@color/search_color_header"
                android:textAllCaps="false"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginBottom="15dp"
                />
        </LinearLayout>
    </ScrollView>



</LinearLayout>