<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/upper_background"
    android:gravity="top"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        >

        <TextView
            android:id="@+id/date_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/pt_serif_bold"
            android:layout_gravity="center"
            android:text="@string/date_day"
            android:textSize="38sp"
            android:textColor="@color/date_day"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            >

            <TextView
                android:id="@+id/day_of_the_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pt_serif_bold"
                android:text="@string/day_of_the_week"
                android:textColor="@color/date_secondary"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/month_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/pt_serif_bold"
                android:text="@string/month_year"
                android:textColor="@color/date_secondary"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:background="@drawable/border_profile"
                    android:scaleType="centerCrop"
                    android:tooltipText="@string/already_in_profile"
                    android:contentDescription="@string/profile_image" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/user_profile"
            android:textColor="@color/headers_primary"
            android:textSize="30sp"
            android:fontFamily="@font/pt_serif_bold"
            android:gravity="bottom"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/empty_divider"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:id="@+id/full_name_profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/full_name_profile_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_serif"
                    android:text="@string/guest"
                    android:textColor="@color/headers_primary"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/books_on_hands_layout_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:showDividers="middle"
                android:divider="@drawable/empty_divider"
                android:visibility="visible"
                >

                <LinearLayout
                    android:id="@+id/books_on_hands_layout_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/books_on_hands"
                        android:textColor="@color/headers_primary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pt_serif_bold"
                        android:gravity="bottom" />

                    <TextView
                        android:id="@+id/books_on_hands_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/watch_all"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/books_on_hands_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/empty_divider_horizontal"
                        android:orientation="horizontal"
                        android:showDividers="middle">

                        <LinearLayout
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:divider="@drawable/small_divider"
                            android:orientation="vertical"
                            android:showDividers="middle"
                            android:layout_marginStart="20dp"
                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/book_image_view"
                                    android:layout_width="105dp"
                                    android:layout_height="148dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/border_book"
                                    android:contentDescription="@string/image_of_book_on_hands"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/little_prince" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/author_test"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:maxLines="2"
                                android:text="@string/author_name"
                                android:textColor="@color/text_secondary"
                                android:textSize="10sp"
                                tools:ignore="SmallSp" />

                            <TextView
                                android:id="@+id/title_test"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pt_serif_bold"
                                android:maxLines="2"
                                android:text="@string/book_title"
                                android:textColor="@color/headers_primary"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/book_image_view2"
                                android:layout_width="105dp"
                                android:layout_height="148dp"
                                android:layout_gravity="center"
                                android:background="@drawable/border_book"
                                android:src="@drawable/book_test"
                                android:contentDescription="@string/image_of_book_on_hands" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/book_image_view3"
                                android:layout_width="105dp"
                                android:layout_height="148dp"
                                android:layout_gravity="center"
                                android:background="@drawable/border_book"
                                android:src="@drawable/book_test"
                                android:contentDescription="@string/image_of_book_on_hands" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/book_image_view4"
                                android:layout_width="105dp"
                                android:layout_height="148dp"
                                android:layout_gravity="center"
                                android:background="@drawable/border_book"
                                android:src="@drawable/book_test"
                                android:contentDescription="@string/image_of_book_on_hands" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/book_image_view5"
                                android:layout_width="105dp"
                                android:layout_height="148dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/border_book"
                                android:src="@drawable/book_test"
                                android:contentDescription="@string/image_of_book_on_hands"
                                />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reserved_books_main_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:showDividers="middle"
                android:divider="@drawable/empty_divider"
                android:visibility="visible"
                >

                <LinearLayout
                    android:id="@+id/reserved_books_layout_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/reserved"
                        android:textColor="@color/headers_primary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pt_serif_bold"
                        android:gravity="bottom"
                        />
                    <TextView
                        android:id="@+id/reserved_books_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/watch_all"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_secondary"
                        />

                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/reserved_books_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:scrollbars="none"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/empty_divider_horizontal"
                        android:orientation="horizontal"
                        android:showDividers="middle">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/reserved_book_image_view"
                                android:layout_width="105dp"
                                android:layout_height="148dp"
                                android:layout_gravity="center"
                                android:background="@drawable/border_book"
                                android:scaleType="fitCenter"
                                android:src="@drawable/book_test"
                                android:contentDescription="@string/image_of_reserved_book"
                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/reserved_book_image_view2"
                                android:layout_width="105dp"
                                android:layout_height="148dp"
                                android:layout_gravity="center"
                                android:background="@drawable/border_book"
                                android:src="@drawable/book_test"
                                android:contentDescription="@string/image_of_reserved_book" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/reserved_book_image_view3"
                                android:layout_width="105dp"
                                android:layout_height="148dp"
                                android:layout_gravity="center"
                                android:background="@drawable/border_book"
                                android:src="@drawable/book_test"
                                android:contentDescription="@string/image_of_reserved_book" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/reserved_book_image_view4"
                                android:layout_width="105dp"
                                android:layout_height="148dp"
                                android:layout_gravity="center"
                                android:background="@drawable/border_book"
                                android:src="@drawable/book_test"
                                android:contentDescription="@string/image_of_reserved_book" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/reserved_book_image_view5"
                                android:layout_width="105dp"
                                android:layout_height="148dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/border_book"
                                android:src="@drawable/book_test"
                                android:contentDescription="@string/image_of_reserved_book"
                                />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_wishlist_header_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:showDividers="middle"
                android:divider="@drawable/empty_divider"
                android:visibility="visible"
                >
                <LinearLayout
                    android:id="@+id/wishlist_header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/wishlist"
                        android:textColor="@color/headers_primary"
                        android:textSize="20sp"
                        android:fontFamily="@font/pt_serif_bold"
                        android:gravity="bottom"
                        />
                    <TextView
                        android:id="@+id/wishlist_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/watch_all"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_secondary"
                        />
                </LinearLayout>
                <HorizontalScrollView
                    android:id="@+id/wishlist_books_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:scrollbars="none"
                    android:visibility="visible"
                    android:layout_marginBottom="15dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp"
                        android:divider="@drawable/empty_divider_horizontal"
                        android:showDividers="middle">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/wishlist_book_image_view"
                                android:layout_width="105dp"
                                android:layout_height="148dp"
                                android:layout_gravity="center"
                                android:background="@drawable/border_book"
                                android:scaleType="fitCenter"
                                android:src="@drawable/book_test"
                                android:contentDescription="@string/image_of_book_from_wishlist"
                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/wishlist_book_image_view2"
                                android:layout_width="105dp"
                                android:layout_height="148dp"
                                android:layout_gravity="center"
                                android:background="@drawable/border_book"
                                android:src="@drawable/book_test"
                                android:contentDescription="@string/image_of_book_from_wishlist"
                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/wishlist_book_image_view3"
                                android:layout_width="105dp"
                                android:layout_height="148dp"
                                android:layout_gravity="center"
                                android:background="@drawable/border_book"
                                android:src="@drawable/book_test"
                                android:contentDescription="@string/image_of_book_from_wishlist"
                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/wishlist_book_image_view4"
                                android:layout_width="105dp"
                                android:layout_height="148dp"
                                android:layout_gravity="center"
                                android:background="@drawable/border_book"
                                android:src="@drawable/book_test"
                                android:contentDescription="@string/image_of_book_from_wishlist"
                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/wishlist_book_image_view5"
                                android:layout_width="105dp"
                                android:layout_height="148dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/border_book"
                                android:src="@drawable/book_test"
                                android:contentDescription="@string/image_of_book_from_wishlist"
                                />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>