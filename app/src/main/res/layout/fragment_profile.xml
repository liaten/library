<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/upper_background"
    android:gravity="top"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        >
        <TextView
            android:id="@+id/date_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/pt_serif_bold"
            android:layout_gravity="center"
            android:text="17"
            android:textSize="38sp"
            android:textColor="@color/date_day"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            >

            <TextView
                android:id="@+id/day_of_the_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pt_serif_bold"
                android:text="Четверг"
                android:textColor="@color/date_secondary"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/month_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/pt_serif_bold"
                android:text="Февраль 2022"
                android:textColor="@color/date_secondary"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="end"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                >
                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:src="@mipmap/profile"
                    android:layout_gravity="center"
                    android:background="@drawable/border_profile"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/empty_divider"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Профиль пользователя"
                    android:textColor="@color/headers_primary"
                    android:textSize="30sp"
                    android:fontFamily="@font/pt_serif_bold"
                    android:gravity="bottom"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >
                <TextView
                    android:id="@+id/full_name_profile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_serif"
                    android:text="Гость"
                    android:textColor="@color/headers_primary"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/books_on_hands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:visibility="visible"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Книги на руках"
                    android:textColor="@color/headers_primary"
                    android:textSize="20sp"
                    android:fontFamily="@font/pt_serif_bold"
                    android:gravity="bottom"
                    />
                <TextView
                    android:id="@+id/books_on_hands_view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Смотреть все >"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
        <LinearLayout
            android:id="@+id/books_on_hands_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:visibility="visible"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                >
                <ImageView
                    android:id="@+id/book_image_view"
                    android:layout_width="105dp"
                    android:layout_height="148dp"
                    android:layout_gravity="center"
                    android:src="@drawable/book_test"
                    android:background="@drawable/border_book"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/reserved_books"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:visibility="visible"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Забронированные"
                    android:textColor="@color/headers_primary"
                    android:textSize="20sp"
                    android:fontFamily="@font/pt_serif_bold"
                    android:gravity="bottom"
                    />
                <TextView
                    android:id="@+id/reserved_books_view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Смотреть все >"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/wishlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:visibility="visible"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Список желаемого"
                    android:textColor="@color/headers_primary"
                    android:textSize="20sp"
                    android:fontFamily="@font/pt_serif_bold"
                    android:gravity="bottom"
                    />
                <TextView
                    android:id="@+id/wishlist_view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Смотреть все >"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>